{
  "openapi": "3.0.0",
  "info": {
    "deepLinking": false,
    "description": "Documentação da API do Sistema Resid",
    "version": "1.0.0",
    "title": "API Sistema Resid",
    "contact": {
      "email": "danilosalys.developer@gmail.com"
    }
  },
 
  "host": "https://api-residexclusive.onrender.com",

  "tags": [
    {
      "name": "Users",
      "description": "Métodos referentes ao cadastro de Usuários do sistema"
    },
    {
      "name": "Projects",
      "description": "Métodos referentes ao cadastro de Obras do sistema"
    }
  ],
  "paths": {
    "/projects": {
      "get": {
        "tags": ["Projects"],
        "description": "Endpoint para listar todas as obras cadastradas no sistema.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/project/{id}": {
      "get": {
        "tags": ["Projects"],
        "description": "Endpoint para listar uma obra pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/projects-info": {
      "get": {
        "tags": [
          "Projects"
        ],
        "description": "Endpoint para listar as obras na pagina inicial do menu de Obras",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/project/name/{name}": {
      "get": {
        "tags": ["Projects"],
        "description": "Endpoint para procurar uma obra pelo nome.",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Obra Versailes"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/project": {
      "post": {
        "tags": ["Projects"],
        "description": "Endpoint para cadastrar uma obra no sistema",
        "responses": {
          "201": {
            "description": "Created"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {                  
                  "projectName": {
                    "type": "string",
                    "example": "Obra Versailes"
                  },
                  "description": {
                    "type": "string",
                    "example": "Este e um exemplo de obra"
                  },
                  "startDate": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-10"
                  },
                  "endDate": {
                    "type": "string",
                    "format": "date",
                    "example": "2025-01-20"
                  },
                  "status": {
                    "type": "string",
                    "example": "Em andamento"
                  },
                  "category": {
                    "type": "string",
                    "example": "Medio porte"
                  },
                  "area": {
                    "type": "decimal",
                    "example": 150.5
                  },
                  "cno": {
                    "type": "string",
                    "example": "CNO123"
                  },
                  "technicalLeadName": {
                    "type": "string",
                    "example": "Monkey D Luffy"
                  },
                  "art": {
                    "type": "string",
                    "example": "ART456"
                  },                 
                  "architectName": {
                    "type": "string",
                    "example": "Nico Robin"
                  },
                  "rrt": {
                    "type": "string",
                    "example": "1234687954"
                  },
                  "foremanName": {
                    "type": "string",
                    "example": "Jose da Silva"
                  },
                  "contractValue": {
                    "type": "number",
                    "example": 1000000
                  },
                  "contractType": {
                    "type": "string",
                    "example": "Prestacao Servico"
                  },
                  "observations": {
                    "type": "string",
                    "example": "Tipos de contrato: Mao de Obra - Administracao - Global"
                  },
                  "address": {
                    "type": "object",
                    "properties": {
                      "street": {
                        "type": "string",
                        "example": "Rua Marineford"
                      },
                      "number": {
                        "type": "number",
                        "example": 44
                      },
                      "complement": {
                        "type": "string",
                        "example": "Quadra 50 Lote 85"
                      },
                      "neighborhood": {
                        "type": "string",
                        "example": "Udon"
                      },
                      "postalCode": {
                        "type": "number",
                        "example": 14095050
                      },
                      "city": {
                        "type": "string",
                        "example": "Log Town"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Users"],
        "description": "Endpoint para o usuário efetuar o login no sistema",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "kaido"
                  },
                  "password": {
                    "type": "string",
                    "example": "senhasenhasenha"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": ["Users"],
        "description": "Endpoint para listar um usuário pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "description": "Endpoint para listar todas os usuários cadastrados.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/user": {
      "post": {
        "tags": ["Users"],
        "description": "Endpoint para cadastrar um usuário",
        "responses": {
          "201": {
            "description": "Created"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "sabo"
                  },
                  "name": {
                    "type": "string",
                    "example": "Sabo Ace"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "sabo.ace@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "senhasenhasenha123"
                  },
                  "birthdate": {
                    "type": "string",
                    "format": "date",
                    "example": "1990-01-01"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
